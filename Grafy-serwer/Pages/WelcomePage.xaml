<Page x:Class="Grafy_serwer.Windows.WelcomePage"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Loaded="Page_Loaded">
        
    <Grid>
        <StackPanel HorizontalAlignment="Center"  VerticalAlignment="Center">
            <Border Padding="5" Background="#eeeeee" CornerRadius="5" BorderBrush="Gray" BorderThickness="1">
                <StackPanel  HorizontalAlignment="Center"  VerticalAlignment="Center" Height="127">
                    <TextBlock TextAlignment="Center" FontSize="17" Style="{StaticResource CustomTextBlockHeader}" TextWrapping="Wrap" Text="Wybierz tryb pracy aplikacji"/>
                    <Button Style="{StaticResource ButtonStyle}" Content="Server" Click="SelectServer"/>
                    <Button Style="{StaticResource ButtonStyle}" Content="Client" Click="SelectClient" Width="414"/>
                    <StackPanel Height="100"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
