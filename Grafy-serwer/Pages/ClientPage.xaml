<Page x:Class="Grafy_serwer.Pages.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Grafy_serwer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientPage"
      Loaded="Page_Loaded">
      
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Border Background="#dedede" Grid.Column="0" Grid.Row="1">
            <Border Background="#dedede" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock x:Name="clientStstus" TextWrapping="Wrap" Text="Statyus: "/>
            </Border>
        </Border>
        <Border Background="#dedede" Grid.Column="1" Grid.Row="1">
            <Button Style="{StaticResource ButtonStyle}" Content="Rozłącz" Click="Disconnect"/>
        </Border>
    </Grid>
</Page>
